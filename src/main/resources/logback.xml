<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%M:%L - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="altitude" level="ERROR" />
  <logger name="org.fusesource.scalate.util" level="ERROR" />
  <logger name="org.atmosphere" level="WARN" />
  <logger name="org.fusesource.scalate.servlet" level="WARN" />
  <logger name="org.scalatra.servlet.ScalatraListener" level="WARN" />



</configuration>
