<% import software.altitude.core.Const %>
<% import software.altitude.core.RequestContext %>
<% import software.altitude.core.models.Person %>
<%@ val person: Person %>

<style>
    #person {
        display: grid;
        margin: 5px;
        padding: 5px;
        border-bottom: 2px solid var(--background-tertiary-color);
        grid-template-columns: 100px 300px auto;
        column-gap: var(--control-horizontal-space);
    }

    #person img {
        border-radius: 50%;
    }

    #person .visual {
        display: grid;
        grid-auto-rows: auto;
        row-gap: var(--control-vertical-space);
    }

    #person .meta {
        display: grid;
        grid-template-rows: auto 20px;
        row-gap: var(--control-vertical-space);
        align-self: center;
    }

    #person .meta .name {
        font-size: 1.1em;
    }

    #person .cover, #person .edit-cover {
        display: grid;
        place-items: center;
    }

    #person .edit-cover a {
        font-size: .9em;
    }

    #person .name, #person .num-of-instances{
        display: grid;
        align-items: center;
    }

    #person .num-of-instances {
        color: var(--font-color-dim);
    }

    #person .name span  {
        cursor: pointer;
    }

    #person .name span i {
        padding-left: 10px;
    }

</style>

<div id="person" class="dropzone" alt-person-id="${person.persistedId}">
    <div class="visual " alt-person-id="${person.persistedId}">
        <div class="cover drag-drop" alt-person-id="${person.persistedId}">
            <img src="/content/r/${RequestContext.getRepository.persistedId}/${Const.DataStore.FACE}/${person.coverFaceId}"
                 draggable="false">
        </div>
        <div class="edit-cover">
            <a href="#">Choose cover</a>
        </div>
    </div>
    <div class="meta">
        <div class="name">
            ${ include("view_person_name.ssp") }
        </div>
        <div class="num-of-instances">
            (${person.numOfFaces} occurrences)
        </div>
    </div>
</div>

<script type="module" src="/js/person/dragon-drop.js"></script>
