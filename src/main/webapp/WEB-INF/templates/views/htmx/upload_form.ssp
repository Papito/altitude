<style>
    #uploadForm {
        display: grid;
        grid-auto-rows: auto;
        grid-row-gap: calc(var(--control-vertical-space) * 1.5);
    }

    #uploadForm div {
        text-align: center;
    }

    #uploadForm progress {
        width: 100%;
    }

    #uploadForm .counter {
        font-size: 1.1em;
        font-weight: bold;
    }

    #uploadForm input[type="file"] {
        color: white;
    }

    #uploadForm button {
        font-size: 1.2em;
    }

</style>

<form id="uploadForm" hx-post="/import/upload" hx-encoding="multipart/form-data">
    <div>
        <input type="file" name="files" id="files" multiple>
    </div>
    <div id="progressBarControl" hidden>
        <progress id='progressBar' value='0' max='100'></progress>
    </div>
    <div class="counter">
        Uploaded <span id="uploadedCount">1</span> of <span id="totalCount">100</span>
    </div>
    <div>
        <button id="doItButton" class="action-button">Upload from computer</button>
    </div>
    <script>
        htmx.on('#uploadForm', 'htmx:xhr:progress', function(evt) {
            document.getElementById("progressBarControl").removeAttribute("hidden")
            htmx.find('#progressBar').setAttribute('value', evt.detail.loaded/evt.detail.total * 100)
            htmx.find('#doItButton').setAttribute('hidden', true)
            htmx.find('#files').setAttribute('disabled', true)
        });
    </script>
</form>
