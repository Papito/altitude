#import(software.altitude.core.Const)
#import(software.altitude.core.AltitudeServletContext)
#import(play.api.libs.json.Json)
#import(play.api.libs.json.JsObject)

<%@ val fieldErrors: Map[String, String] = Map.empty %>
<%@ val formJson: JsObject = Json.obj() %>


<style>
    #setupForm {
        display: grid;
        grid-auto-rows: min-content;
        grid-row-gap: var(--section-vertical-space);
    }

    #setupForm label {
        display: block;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 5px;
        font-size: 1.2em;
    }

    #setupForm input {
        background-color: #FFFFFF;
    }

    #setupForm input:not([type="submit"]) {
        width: 100%
    }

    #setupForm .submit {
        margin-top: var(--control-vertical-space);
        display: grid;
        place-items: center;
    }

    #setupForm input[type="submit"] {
        line-height: 1.3em;
        font-size: 1.2em;
        width: 50%
    }

    #setupForm .action-button {
        padding: 10px 36px;
        font-size: 1.3em;
    }

    #setupForm div.error {
        padding: 5px;
        margin-top: 2px;
        background-color: var(--message-background-color);
        color: #FFF;
        border: 1px solid var(--error-color);
        border-bottom: 2px solid var(--error-color);
        letter-spacing: 1px;
    }
</style>

<form action="#" id="setupForm"
      hx-swap="outerHTML"
      hx-post="${ url(htmxAdminSetup) }"
      hx-ext="json-enc">

    <div>
        <label for="${ Const.Api.Setup.REPOSITORY_NAME }">Library name</label>
        <input type="text"
               id="${ Const.Api.Setup.REPOSITORY_NAME }"
               name="${ Const.Api.Setup.REPOSITORY_NAME }"
               placeholder="Library name"
               value='<%= (formJson \ Const.Api.Setup.REPOSITORY_NAME).asOpt[String].getOrElse("Personal") %>'
               autocomplete="off"
               minlength="${ Const.Api.Constraints.MIN_REPOSITORY_NAME_LENGTH }"
               maxlength="${ Const.Api.Constraints.MAX_REPOSITORY_NAME_LENGTH }"/>
        #if (fieldErrors.contains(Const.Api.Setup.REPOSITORY_NAME))
            <div class="error">${ fieldErrors(Const.Api.Setup.REPOSITORY_NAME) }</div>
        #end
    </div>
    <div>
        <label for="dbEngine">Database type</label>
        <input type="text"
               id="dbEngine"
               name="dbEngine"
               class="readonly"
               readonly
               value="<%= software.altitude.core.AltitudeServletContext.app.config.getString(Const.Conf.DB_ENGINE) %>"/>
    </div>
    <div>
        <label for="${ Const.Api.Setup.ADMIN_NAME }">Administrator Name</label>
        <input type="text"
               autocomplete="off"
               id="${ Const.Api.Setup.ADMIN_NAME }"
               name="${ Const.Api.Setup.ADMIN_NAME }"
               value='<%= (formJson \ Const.Api.Setup.ADMIN_NAME).asOpt[String].getOrElse("") %>'
               minlength="${ Const.Api.Constraints.MIN_NAME_LENGTH }"
               maxlength="${ Const.Api.Constraints.MAX_NAME_LENGTH }"/>
        #if (fieldErrors.contains(Const.Api.Setup.ADMIN_NAME))
            <div class="error">${ fieldErrors(Const.Api.Setup.ADMIN_NAME) }</div>
        #end
    </div>
    <div>
        <label for="${ Const.Api.Setup.ADMIN_EMAIL }">Administrator Email</label>
        <input type="email"
               autocomplete="off"
               id="${ Const.Api.Setup.ADMIN_EMAIL }"
               name="${ Const.Api.Setup.ADMIN_EMAIL }"
               value='<%= (formJson \ Const.Api.Setup.ADMIN_EMAIL).asOpt[String].getOrElse("") %>'
               minlength="${ Const.Api.Constraints.MIN_EMAIL_LENGTH }"
               maxlength="${ Const.Api.Constraints.MAX_EMAIL_LENGTH }"/>
        #if (fieldErrors.contains(Const.Api.Setup.ADMIN_EMAIL))
            <div class="error">${ fieldErrors(Const.Api.Setup.ADMIN_EMAIL) }</div>
        #end
    </div>
    <div>
        <label for="${ Const.Api.Setup.PASSWORD }">Administrator Password</label>
        <input type="password"
               id="${ Const.Api.Setup.PASSWORD }"
               name="${ Const.Api.Setup.PASSWORD  }"
               value='<%= (formJson \ Const.Api.Setup.PASSWORD).asOpt[String].getOrElse("") %>'
               minlength="${ Const.Api.Constraints.MIN_PASSWORD_LENGTH }"
               maxlength="${ Const.Api.Constraints.MAX_PASSWORD_LENGTH }"/>
        #if (fieldErrors.contains(Const.Api.Setup.PASSWORD))
        <div class="error">${ fieldErrors(Const.Api.Setup.PASSWORD) }</div>
        #end
    </div>
    <div>
        <label for="${ Const.Api.Setup.PASSWORD2 }">Confirm Password</label>
        <input type="password"
               id="${ Const.Api.Setup.PASSWORD2 }"
               name="${ Const.Api.Setup.PASSWORD2 }"
               value='<%= (formJson \ Const.Api.Setup.PASSWORD2).asOpt[String].getOrElse("") %>'
               minlength="${ Const.Api.Constraints.MIN_PASSWORD_LENGTH }"
               maxlength="${ Const.Api.Constraints.MAX_PASSWORD_LENGTH }"/>
        #if (fieldErrors.contains(Const.Api.Setup.PASSWORD2))
        <div class="error">${ fieldErrors(Const.Api.Setup.PASSWORD2) }</div>
        #end
    </div>
    <div class="submit">
        <button type="submit"
                class="action-button"
                id="initialize">
            Dazzle Me
        </button>
    </div>
</form>
