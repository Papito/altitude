<!DOCTYPE html>
<html lang="en">
<head>
    <title>ALTITUDE</title>

    ${include("includes/header_common.ssp")}

    <style>
        body {
            display: grid;
            grid-template-rows: auto 1fr 40px;
            height: 100vh;
            margin: 0;
        }

        main {
            height: 100%;
            overflow: hidden;
        }

        #browser {
            border-right: 1px solid var(--panel-border-color);
            box-shadow: var(--box-shadow);
            text-shadow: rgba(0,0,0,0.75) 0 1px;
        }

        #assets {
            border-left: 1px solid var(--panel-border-color);
            box-shadow: var(--box-shadow);
            text-shadow: rgba(0,0,0,0.75) 0 1px;
            overflow-y: auto;
        }

        #folders {
            box-shadow: var(--box-shadow);
            text-shadow: rgba(0,0,0,0.75) 0 1px;
        }

        #albums {
            border-top: 1px solid var(--panel-border-color);
            box-shadow: var(--box-shadow);
            text-shadow: rgba(0,0,0,0.75) 0 1px;
        }

        /* SPLIT */
        .split.split-horizontal,
        .gutter.gutter-horizontal {
            height: 100%;
            float: left;
        }

        .gutter {
            background-color: transparent;
            background-repeat: no-repeat;
            background-position: 50%;
        }

        .gutter.gutter-vertical {
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAFAQMAAABo7865AAAABlBMVEVHcEzMzMzyAv2sAAAAAXRSTlMAQObYZgAAABBJREFUeF5jOAMEEAIEEFwAn3kMwcB6I2AAAAAASUVORK5CYII=');
            cursor: ns-resize;
        }

        .gutter.gutter-horizontal {
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAeCAYAAADkftS9AAAAIklEQVQoU2M4c+bMfxAGAgYYmwGrIIiDjrELjpo5aiZeMwF+yNnOs5KSvgAAAABJRU5ErkJggg==');
            cursor: ew-resize;
        }

        .split {
            box-sizing: border-box;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .responsive-image {
            max-width: 100%;
        }

        .cell img {
            display: block;
        }

        .grid {
            margin: 10px;
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            justify-content: center;
        }

        .cell {
            display: grid;
            width:220px;
            height: 220px;
            place-items: center;
        }
    </style>
</head>

#import(software.altitude.core.RequestContext)
#import(software.altitude.core.models.Asset)
#import(software.altitude.core.util.SearchResult)
<%@ val results: SearchResult %>

<body>

<div>
    ${include("includes/nav.ssp")}
    ${include("htmx/status_ticker.ssp")}
</div>

<main>
    <div id="browser" class="split content split-horizontal">
        <div id="folders" class="split content">
        </div>
        <div id="albums" class="split content">
        </div>
    </div>

    <div id="assets" class="split content split-horizontal">
        <div class="grid">
            #for (idx <- 0 to results.records.length - 1)
            <div class="cell">
                <% val asset: Asset = results.records(idx) %>
                <img src="/content/preview/<%= asset.persistedId %>" class="responsive-image"/>
            </div>
        #end
        </div>
    </div>
</main>

<footer>
    <%= RequestContext.account.value.getOrElse("None") %>
</footer>

<script lang="js">
    Split(["#browser", "#assets"], {
        sizes: [25, 75]
    })

    Split(["#folders", "#albums"], {
        sizes: [50, 50],
        direction: 'vertical'
    })
</script>

</body>
</html>
