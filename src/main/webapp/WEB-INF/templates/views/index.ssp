<!DOCTYPE html>
<% import software.altitude.core.Api %>
<% import software.altitude.core.AltitudeServletContext %>
<% import software.altitude.core.RequestContext %>

<html lang="en">
<head>
  <title>ALTITUDE</title>

  <% include("includes/header_common.ssp") %>

  <script type="module" src="/js/index/init.js"></script>

  <style>
    body {
      display: grid;
      grid-template-rows: auto 1fr 40px;
      height: 100vh;
      margin: 0;
    }

    main {
      height: 100%;
      overflow: hidden;
    }

    #explorer {
      border-right: 1px solid var(--panel-border-color);
      box-shadow: var(--box-shadow);
      text-shadow: rgba(0,0,0,0.75) 0 1px;
      padding-top: var(--panel-padding);
    }

    #explorerViews {
      box-shadow: var(--box-shadow);
      text-shadow: rgba(0,0,0,0.75) 0 1px;
    }

    #infoPanel {
      border-top: 1px solid var(--panel-border-color);
      box-shadow: var(--box-shadow);
      text-shadow: rgba(0,0,0,0.75) 0 1px;
    }

    #content {
      border-left: 1px solid var(--panel-border-color);
      box-shadow: var(--box-shadow);
      text-shadow: rgba(0,0,0,0.75) 0 1px;
      overflow-y: scroll;
      max-width: 100%;
    }

    /* SPLIT */
    .split.split-horizontal,
    .gutter.gutter-horizontal {
      height: 100%;
      float: left;
    }

    .gutter {
      background-color: transparent;
      background-repeat: no-repeat;
      background-position: 50%;
    }

    .gutter.gutter-vertical {
      background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAFAQMAAABo7865AAAABlBMVEVHcEzMzMzyAv2sAAAAAXRSTlMAQObYZgAAABBJREFUeF5jOAMEEAIEEFwAn3kMwcB6I2AAAAAASUVORK5CYII=');
      cursor: ns-resize;
    }

    .gutter.gutter-horizontal {
      background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAeCAYAAADkftS9AAAAIklEQVQoU2M4c+bMfxAGAgYYmwGrIIiDjrELjpo5aiZeMwF+yNnOs5KSvgAAAABJRU5ErkJggg==');
      cursor: ew-resize;
    }

    .split {
      overflow-y: auto;
      overflow-x: hidden;
    }

  </style>
</head>

<body>

<div>
  <% include("includes/nav.ssp") %>
</div>

<main>
  <% include("includes/html_common.ssp") %>

  <div id="explorer" class="split content split-horizontal">
    <div id="explorerViews" class="split content">
      <tab-container>
        <div role="tablist">
          <button type="button" id="foldersTab" role="tab"
                  data-tab-container-no-tabstop>
            <a href="#folders"
               hx-target="#explorerPanelContent"
               hx-swap="innerHTML"
               hx-trigger="click"
               hx-get='${ url(showFoldersTab, Api.Field.REPO_ID -> RequestContext.getRepository.persistedId) }'>Folders</a>
          </button>

          <button type="button" id="albumsTab" role="tab"
                  data-tab-container-no-tabstop>
            <a href="#albums"
               hx-target="#explorerPanelContent"
               hx-trigger="click"
               hx-swap="innerHTML"
               hx-get='${ url(showAlbumsTab, Api.Field.REPO_ID -> RequestContext.getRepository.persistedId) }'>Albums</a>
          </button>

          <button type="button" id="peopleTab" role="tab"
                  data-tab-container-no-tabstop>
            <a href="#people"
               hx-target="#explorerPanelContent"
               hx-trigger="click"
               hx-swap="innerHTML"
               hx-get='${ url(showPeopleTab, Api.Field.REPO_ID -> RequestContext.getRepository.persistedId) }'>People</a>
          </button>
        </div>

        <div id="explorerPanelContent" role="tabpanel" class="tab-content">
        </div>

      </tab-container>
    </div>

    <div id="infoPanel" class="split content">
    </div>
  </div>

  <div id="content" class="split content split-horizontal">
  </div>
</main>

<footer>
  <%= RequestContext.account.value.get.name %>
</footer>

<script type="module">
  import { context } from "../../../js/context.js"

  function loadView() {
      // if there is no fragment, we default to folder views
      const fragment = window.location.hash || "#folders"

      const tabLink = document.querySelector('a[href="' + fragment + '"]')
      if (tabLink) {
          tabLink.click()
      }

      context.setRepoId("<%= RequestContext.getRepository.persistedId %>")
      const urlParams = new URLSearchParams(window.location.search)
      const view = urlParams.get("view")

      let searchUrl =  null

      if (view === "person") {
          const personId = urlParams.get("personId")
          if (personId) {
            searchUrl = "/htmx/search/r/" + context.getRepoId() + "?personIds=" + personId

          }
      } else {
        searchUrl = "/htmx/search/r/" + context.getRepoId()
      }

    htmx.ajax("get", searchUrl, {
      swap: "innerHTML",
      target: "#content",
    })

  }

  document.addEventListener("DOMContentLoaded", loadView)
</script>

</body>
</html>
